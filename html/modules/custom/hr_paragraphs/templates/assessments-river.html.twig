<div class="river">
  <div class="river__results">
    {% for row in data %}
      <article class="river__result" data-rw-id="{{ row.id }}">
        <header>
          <h4 class="title"><a href="{{ row.url }}">{{ row.title }}</a></h4>
        </header>
        <footer>
          <dl class="meta core">
            <dt class="format">{{ 'Status'|t }}:</dt>
            <dd class="format">{{ row.status.label }}</dd>

            <dt class="source">{{ 'Organizations'|t }}:</dt>
            <dd class="source">
              {% for org in row.organizations %}
                {{ org.label }},
              {% endfor %}
            </dd>

            <dt class="date posted">{{ 'Date'|t }}:</dt>
            <dd class="date posted">{{ row.date.start|date("d M Y") }} - {{ row.date.end|date("d M Y") }}</dd>
          </dl>
        </footer>
      </article>
    {% endfor %}

    {{ pager }}
  </div>{# .river__results #}

  <div class="river__facets-wrapper">
    <p class="river__facets-count">
      <span class="river__facets-count__value">{{ total }}</span> documents found
    </p>

    {% if active_facets|length > 0 %}
      <div class="river__facets--active">
        <details open>
          <summary>{{ 'Remove filters'|t }} </summary>
          <ul>
          {% for link in active_facets %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
          </ul>
        </details>
      </div>
    {% endif %}

    {% for facet in facets %}
      <div class="river__facets">
        <details>
          <summary>{{ facet.title }}</summary>
          <ul class="river__facet">
          {% for link in facet.links %}
            <li class="river__facet-link"><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
          </ul>
        </details>
      </div>
    {% endfor %}
  </div>{# .river__facets-wrapper #}

</div>{# .river #}
