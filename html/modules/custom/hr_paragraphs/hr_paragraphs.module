}

/**
 * Implements template_preprocess_node().
 */
function hr_paragraphs_preprocess_node(&$variables) {
  if ($variables['view_mode'] != 'full') {
    return;
  }

  /** @var \Drupal\node\NodeInterface $node */
  $node = $variables['node'];

  $group_content_array = GroupContent::loadByEntity($node);
  $group_content = reset($group_content_array);
  if ($group_content) {
    $group = $group_content->getGroup();

    if ($group->hasField('field_sidebar_from_operation') && !$group->field_sidebar_from_operation->isEmpty() && $group->field_sidebar_from_operation->value) {
      if ($group->hasField('subgroup_tree') && !$group->subgroup_tree->isEmpty()) {
        $group = Group::load($group->subgroup_tree->value);
      }
    }

    if ($group->hasField('field_sidebar_menu') && !$group->field_sidebar_menu->isEmpty()) {
      $variables['field_sidebar_menu'] = $group->field_sidebar_menu->view();
    }
  }
}

/**
 * Implements template_preprocess_group().
 */
function hr_paragraphs_preprocess_group(&$variables) {
  if ($variables['view_mode'] != 'full') {
    return;
  }

  /** @var \Drupal\group\Entity\GroupInterface $group */
  $group = $variables['elements']['#group'];

  if ($group->hasField('field_sidebar_from_operation') && !$group->field_sidebar_from_operation->isEmpty() && $group->field_sidebar_from_operation->value) {
    if ($group->hasField('subgroup_tree') && !$group->subgroup_tree->isEmpty()) {
      $group = Group::load($group->subgroup_tree->value);
      if ($group->hasField('field_sidebar_menu') && !$group->field_sidebar_menu->isEmpty()) {
        $variables['content']['field_sidebar_menu'] = $group->field_sidebar_menu->view();
      }
    }
  }
}

/**
 * Parse query string, allowing duplicate keys.
 */
function hr_paragraphs_parse_str($string) {
  $results = [];
  $parts = explode('&', $string);

  foreach ($parts as $part) {
    // Split into name and value.
    [$name, $value] = explode('=', $part, 2);

    // Decode value.
    $value = urldecode($value);

    // If name already exists.
    if (isset($results[$name])) {
      // Stick multiple values into an array.
      if (is_array($results[$name])) {
        $results[$name][] = $value;
      }
      else {
        $results[$name] = [$results[$name], $value];
      }
    }
    // Otherwise, simply stick it in a scalar.
    else {
      $results[$name] = $value;
    }
  }

  return $results;
}

/**
 * Build HDX query parameters.
 */
function hr_paragraphs_build_hdx_query($filters) {
  $parameters = [
    'q' => '',
    'fq' => '+dataset_type:dataset -extras_archived:true',
    'fq_list' => [],
    'facet.field' => [
      '{!ex=groups}groups',
      '{!ex=res_format}res_format',
      '{!ex=organization}organization',
      '{!ex=vocab_Topics}vocab_Topics',
      '{!ex=license_id}license_id',
    ],
    'facet.limit' => 250,
    'sort' => 'score desc, if(gt(last_modified,review_date),last_modified,review_date) desc',
    'start' => 0,
    'rows' => 25,
  ];

  // Pasted filters from URL are using OR.
  // Local filters on HRInfo will use and and no tag.
  foreach ($filters as $key => $values) {
    switch ($key) {
      case 'q':
      case 'sort':
        $parameters[$key] = $values;
        break;

      case 'groups':
      case 'organization':
        if (is_array($values)) {
          $parameters['fq_list'][] = '{!tag=' . $key . '}' . $key . ':"' . implode('" OR "', $values) . '"';
        }
        else {
          $parameters['fq_list'][] = '{!tag=' . $key . '}' . $key . ':"' . $values . '"';
        }
        break;

    }
  }

  return $parameters;
}

/**
 * Fetch HDX data and facets.
 */
function hr_paragraphs_get_hdx_data($parameters) {
  $endpoint = 'https://data.humdata.org/api/3/action/package_search';

  try {
    $response = \Drupal::httpClient()->request(
      'POST',
      $endpoint,
      [
        RequestOptions::JSON => $parameters,
      ]
    );
  }
  catch (\Exception $exception) {
    if ($exception->getCode() === 404) {
      throw new NotFoundHttpException();
    }
  }

  $body = $response->getBody() . '';
  $results = json_decode($body, TRUE);

  return $results;
}
